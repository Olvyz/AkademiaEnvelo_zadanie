private static boolean search(int[] numbers, int x)
    {
        int l=numbers.length;
        if (x>numbers[0] || x<numbers[l-1])
        {
            return (false);
        }
        else
        {
            for (int i=0; i<=l-1; i++)
            {
                if (x==numbers[i])
                {
                    return (true);
                }
            }
        }
        return (false);
    }
